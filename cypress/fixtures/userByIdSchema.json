{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User By ID Schema",
  "type": "object",
  "required": ["id", "firstName", "lastName", "email", "username", "age", "gender", "role", "address", "bank", "company", "crypto"],
  "properties": {
    "id": { "type": "integer" },
    "firstName": { "type": "string" },
    "lastName": { "type": "string" },
    "email": { "type": "string" },
    "username": { "type": "string" },
    "age": { "type": "integer" },
    "gender": { "type": "string" },
    "role": { "type": "string" },
    "address": {
      "type": "object",
      "required": ["address", "city", "state", "coordinates"],
      "properties": {
        "address": { "type": "string" },
        "city": { "type": "string" },
        "state": { "type": "string" },
        "coordinates": {
          "type": "object",
          "required": ["lat", "lng"],
          "properties": {
            "lat": { "type": "number" },
            "lng": { "type": "number" }
          }
        }
      }
    },
    "bank": {
      "type": "object",
      "required": ["cardNumber", "cardType", "currency"],
      "properties": {
        "cardNumber": { "type": "string" },
        "cardType": { "type": "string" },
        "currency": { "type": "string" }
      }
    },
    "company": {
      "type": "object",
      "required": ["name", "title", "department", "address"],
      "properties": {
        "name": { "type": "string" },
        "title": { "type": "string" },
        "department": { "type": "string" },
        "address": {
          "type": "object",
          "required": ["address", "city", "state", "coordinates"],
          "properties": {
            "address": { "type": "string" },
            "city": { "type": "string" },
            "state": { "type": "string" },
            "coordinates": {
              "type": "object",
              "required": ["lat", "lng"],
              "properties": {
                "lat": { "type": "number" },
                "lng": { "type": "number" }
              }
            }
          }
        }
      }
    },
    "crypto": {
      "type": "object",
      "required": ["coin", "wallet", "network"],
      "properties": {
        "coin": { "type": "string" },
        "wallet": { "type": "string" },
        "network": { "type": "string" }
      }
    }
  }
}
