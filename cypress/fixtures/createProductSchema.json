{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Create Product Schema",
  "type": "object",
  "required": [
    "id",
    "title",
    "description",
    "price",
    "discountPercentage",
    "rating",
    "stock",
    "brand",
    "category",
    "thumbnail"
  ],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "price": {
      "type": "number",
      "minimum": 0
    },
    "discountPercentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "rating": {
      "type": "number",
      "minimum": 0,
      "maximum": 5
    },
    "stock": {
      "type": "integer",
      "minimum": 0
    },
    "brand": {
      "type": "string",
      "minLength": 1
    },
    "category": {
      "type": "string",
      "minLength": 1
    },
    "thumbnail": {
      "type": "string",
      "format": "uri"
    }
  },
  "additionalProperties": false
}
